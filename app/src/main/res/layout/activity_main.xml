<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/background"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="30"
        android:id="@+id/temperatureTextViewID"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="110sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Date"
        android:id="@+id/dateTextViewID"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My city"
        android:id="@+id/cityTextViewID"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="73dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Sunny"
        android:id="@+id/weatherTypeTextViewID"
        android:textSize="20sp"
        android:layout_below="@+id/temperatureTextViewID"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="C"
        android:id="@+id/textView5"
        android:layout_alignTop="@+id/temperatureTextViewID"
        android:layout_alignParentEnd="true"
        android:layout_toEndOf="@+id/temperatureTextViewID" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/icon_clearsky"
        android:id="@+id/imageView"
        android:layout_below="@+id/dateTextViewID"
        android:layout_alignEnd="@+id/textView5"
        android:layout_marginTop="27dp" />

</RelativeLayout>